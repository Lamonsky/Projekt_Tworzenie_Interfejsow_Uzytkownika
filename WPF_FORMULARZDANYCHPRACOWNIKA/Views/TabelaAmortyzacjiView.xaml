                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <DataGrid Grid.Row="0" AutoGenerateColumns="True" GridLinesVisibility="All">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Akronim"/>
