                            </Grid>
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="150"/>
                                </Grid.ColumnDefinitions>
                                <CheckBox Grid.Column="0"/>
                                <TextBlock Grid.Column="1" Text="Archiwalna"/>
                                <TextBlock Grid.Column="3" Text="Status:"/>
                                <syncfusion:ComboBoxAdv Grid.Column="4">
                                    <syncfusion:ComboBoxItemAdv Content="Wszystkie"/>
                                    <syncfusion:ComboBoxItemAdv Content="Aktywne nieumorzone, niezamortyzowane"/>
                                    <syncfusion:ComboBoxItemAdv Content="Aktywne nieumorzone"/>
                                    <syncfusion:ComboBoxItemAdv Content="Aktywne niezamortyzowane"/>
                                </syncfusion:ComboBoxAdv>
                                <TextBlock Grid.Column="5" Text="Stan:"/>
                                <syncfusion:ComboBoxAdv Grid.Column="6">
                                    <syncfusion:ComboBoxItemAdv Content="Wszystkie"/>
                                    <syncfusion:ComboBoxItemAdv Content="Niezlikwidowane"/>
                                    <syncfusion:ComboBoxItemAdv Content="Zlikwidowane"/>
                                    <syncfusion:ComboBoxItemAdv Content="Obce"/>
                                    <syncfusion:ComboBoxItemAdv Content="Własne"/>
                                </syncfusion:ComboBoxAdv>
                            </Grid>
                            <Grid Grid.Row="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="150"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="Waluta:"/>
                                <syncfusion:ComboBoxAdv Grid.Column="1">
                                    <syncfusion:ComboBoxItemAdv Content="PLN"/>
                                    <syncfusion:ComboBoxItemAdv Content="EUR"/>
                                    <syncfusion:ComboBoxItemAdv Content="USD"/>
                                </syncfusion:ComboBoxAdv>
                                <TextBlock Grid.Column="2" Text="Wartosć w walucie:"/>
                                <syncfusion:ComboBoxAdv Grid.Column="3">
                                    <syncfusion:ComboBoxItemAdv Content="Środka trwalego"/>
                                </syncfusion:ComboBoxAdv>
                            </Grid>
                        </Grid>
                    </Grid>
                </Border>
            </TabItem>
            <TabItem Header="Generacja">
                <Border BorderBrush="Black" BorderThickness="2" Margin="2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="auto"/>
